<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlightsActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/txtFlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="cursive"
        android:text="Flights"
        android:textColor="#FFFFFF"
        android:textSize="70sp" />

    <ImageView
        android:id="@+id/indigo"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-137dp"
        android:layout_marginEnd="264dp"
        android:layout_marginBottom="152dp"
        android:src="@drawable/indigo" />

    <TextView
        android:layout_width="221dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/indigo"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="146dp"
        android:layout_marginTop="-117dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="192dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/cursive"
        android:gravity="center"
        android:text="Indigo"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/spicejet"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="268dp"
        android:layout_marginBottom="-12dp"
        android:src="@drawable/spicejet" />

    <TextView
        android:layout_width="221dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/spicejet"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="153dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="-16dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/cursive"
        android:gravity="center"
        android:text="Spicejet"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/jet"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="181dp"
        android:layout_marginEnd="259dp"
        android:layout_marginBottom="-116dp"
        android:src="@drawable/jet" />

    <TextView
        android:layout_width="221dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/jet"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="156dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="-155dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/cursive"
        android:gravity="center"
        android:text="Jet Airways"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:textStyle="bold" />


</RelativeLayout>